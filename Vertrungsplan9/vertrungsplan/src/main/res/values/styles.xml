    <style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/search_bg_shadow3</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="nowCardTitleStyle" parent="android:Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textAllCaps" tools:targetApi="14">true</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-light"</item>
        <item name="android:textColor">@color/special_color</item>
    </style>

    <style name="nowCardSeperatorStyle">
        <item name="android:background">#E5E5E5</item>
    </style>

    <style name="nowCardContentStyle">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="nowCardExceptionStyle" parent="android:Widget.TextView">
            <item name="android:textSize">15sp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingBottom">5dp</item>
            <item name="android:fontFamily" tools:targetApi="16">sans-serif-light</item>
            <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- ActionBar styles -->

</resources>